#!/bin/sh

# shellcheck disable=SC1090
. "$HOME"/bin/hasfunc

if ! hasfunc load; then
  load() {
    for p in "$@"; do
      if [ -d "$p" ]; then
        load "$p"/*
      elif [ -r "$p" ] && [ -f "$p" ]; then # || [ -L "$f" ]
        # shellcheck disable=SC1090
        . "$p"
        # else
        #   >&2 printf "%s\n" "$p: No such file or directory"
      fi
    done
    unset p
  }
fi

# shellcheck disable=SC2128
[ "$(basename -- "$0")" = load ] && load "$@"
