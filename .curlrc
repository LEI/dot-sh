# ~/.curlrc

# https://github.com/drduh/OS-X-Security-and-Privacy-Guide#curl
# https://github.com/mathiasbynens/dotfiles/blob/master/.curlrc

user-agent = "Mozilla/5.0 (Windows NT 6.1; rv:31.0) Gecko/20100101 Firefox/31.0"
# Disguise as IE 9 on Windows 7
# user-agent = "Mozilla/5.0 (compatible; MSIE 9.0; Windows NT 6.1; Trident/5.0)"

# When following a redirect, automatically set the previous URL as referer
referer = ";auto"

# Wait 60 seconds before timing out (use 10 instead?)
connect-timeout = 60

# progress-bar
max-time = 120 # 90
# verbose
show-error
remote-time
ipv4
